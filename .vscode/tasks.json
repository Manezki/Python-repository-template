{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Update requirements",
            "type": "shell",
            "command": "${command:python.interpreterPath} -m pip freeze | grep ^(?!-e ) > requirements.txt",
            "windows": {
                "command": "${command:python.interpreterPath} -m pip freeze | Where-Object { $_ -NotMatch '^-e ' } > requirements.txt"
            },
        },
        {
            "label": "Installation",
            "type": "shell",
            "command": "${config:python.pythonPath} -m pip install -e .",
            "windows": {
                "command": "${config:python.pythonPath} -m pip install -e .",
            },
        },
        {
            "label": "Linting",
            "type": "shell",
            "command": "${command:python.interpreterPath} -m pylint --rcfile= .pylintrc $(git ls-files '*.py')",
            "windows": {
                "command": "${command:python.interpreterPath} -m pylint --rcfile= .pylintrc $(git ls-files '*.py')",
            },
            "dependsOn": ["Installation"],
        },
        {
            "label": "Unit testing",
            "type": "shell",
            "command": "${command:python.interpreterPath} -m tox .",
            "windows": {
                "command": "${command:python.interpreterPath} -m tox .",
            },
            "dependsOn": ["Installation"],
        },
        {
            "label": "Local build",
            "type": "shell",
            "dependsOn": ["Unit testing", "Update requirements", "Linting"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ]
}